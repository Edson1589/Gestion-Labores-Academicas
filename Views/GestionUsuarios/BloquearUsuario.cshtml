@model GestionLaboresAcademicas.Models.ViewModels.BloquearUsuarioViewModel

@{
    ViewData["Title"] = "Bloquear Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-lock"></i> Bloquear Usuario
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Información del usuario -->
                    <div class="alert alert-info">
                        <h5 class="alert-heading">Usuario a bloquear</h5>
                        <p class="mb-1"><strong>Nombre:</strong> @Model.NombreCompleto</p>
                        <p class="mb-0">
                            <strong>Estado actual:</strong>
                            <span class="badge badge-success">@Model.EstadoActual</span>
                        </p>
                    </div>

                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="fas fa-exclamation-circle"></i> Atención
                        </h5>
                        <p class="mb-0">
                            Al bloquear este usuario:
                        </p>
                        <ul class="mb-0">
                            <li>El usuario NO podrá iniciar sesión durante el bloqueo</li>
                            <li>Todas las sesiones activas se cerrarán inmediatamente</li>
                            <li>Las credenciales de acceso quedarán bloqueadas</li>
                            <li>Para bloqueo temporal: se desbloqueará automáticamente al vencer el tiempo</li>
                            <li>Para bloqueo permanente: requiere activación manual</li>
                        </ul>
                    </div>

                    @if (Model.CantidadSesionesActivas > 0)
                    {
                        <div class="alert alert-warning">
                            <h5 class="alert-heading">
                                <i class="fas fa-desktop"></i> Sesiones activas detectadas
                            </h5>
                            <p>El usuario tiene <strong>@Model.CantidadSesionesActivas</strong> sesión(es) activa(s) que serán cerradas:</p>
                            <ul class="mb-0">
                                @foreach (var sesion in Model.SesionesActivas)
                                {
                                    <li>@sesion.Dispositivo - @sesion.Navegador (IP: @sesion.DireccionIP)</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="ConfirmarBloqueo" method="post">
                        <input type="hidden" asp-for="UsuarioId" />
                        <input type="hidden" asp-for="NombreCompleto" />
                        <input type="hidden" asp-for="EstadoActual" />

                        <div class="form-group">
                            <label class="font-weight-bold">
                                Tipo de bloqueo <span class="text-danger">*</span>
                            </label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="TipoBloqueo" value="Temporal" id="tipoTemporal" checked />
                                <label class="form-check-label" for="tipoTemporal">
                                    <strong>Temporal</strong> - El usuario se desbloqueará automáticamente
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="TipoBloqueo" value="Permanente" id="tipoPermanente" />
                                <label class="form-check-label" for="tipoPermanente">
                                    <strong>Permanente</strong> - Requiere activación manual del usuario
                                </label>
                            </div>
                        </div>

                        <div id="duracionBloqueo" class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title">Duración del bloqueo temporal</h6>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="DuracionMinutos">Minutos</label>
                                            <input type="number" asp-for="DuracionMinutos" class="form-control" min="0" max="59" placeholder="0" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="DuracionHoras">Horas</label>
                                            <input type="number" asp-for="DuracionHoras" class="form-control" min="0" max="23" placeholder="0" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="DuracionDias">Días</label>
                                            <input type="number" asp-for="DuracionDias" class="form-control" min="0" max="365" placeholder="0" />
                                        </div>
                                    </div>
                                </div>
                                <small class="form-text text-muted">
                                    Especifica al menos un valor de tiempo para el bloqueo temporal.
                                </small>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="MotivoBloqueo" class="font-weight-bold">
                                Motivo del bloqueo <span class="text-danger">*</span>
                            </label>
                            <textarea asp-for="MotivoBloqueo"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Describe el motivo por el cual se bloquea este usuario (mínimo 10 caracteres)..."
                                      required></textarea>
                            <span asp-validation-for="MotivoBloqueo" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Este motivo quedará registrado en el historial de cambios de estado del usuario.
                            </small>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Resumen" asp-route-id="@Model.UsuarioId" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-lock"></i> Confirmar Bloqueo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Mostrar/ocultar duración según el tipo de bloqueo
            $('input[name="TipoBloqueo"]').change(function() {
                if ($(this).val() === 'Temporal') {
                    $('#duracionBloqueo').slideDown();
                } else {
                    $('#duracionBloqueo').slideUp();
                    // Limpiar valores de duración
                    $('#DuracionMinutos, #DuracionHoras, #DuracionDias').val('');
                }
            });

            // Estado inicial
            if ($('#tipoPermanente').is(':checked')) {
                $('#duracionBloqueo').hide();
            }
        });
    </script>
}
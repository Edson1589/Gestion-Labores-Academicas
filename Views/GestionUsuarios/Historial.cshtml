@model GestionLaboresAcademicas.Models.ViewModels.HistorialUsuarioViewModel

@{
    ViewData["Title"] = "Historial de usuario";
}

<h2>Historial de usuario</h2>

<p>
    <strong>Usuario:</strong> @Model.NombreCompleto (@Model.TipoUsuario)
</p>

@if (!Model.Registros.Any())
{
    <div class="alert alert-info">
        No hay registros de auditoría para este usuario.
    </div>
}
else
{
    <div class="table-responsive mt-3">
        <table class="table table-sm table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Fecha / hora</th>
                    <th>Acción</th>
                    <th>Actor</th>
                    <th>Detalle</th>
                    <th>Origen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Registros)
                {
                    <tr>
                        <td>@r.FechaHora.ToLocalTime():g</td>
                        <td>@r.Accion</td>
                        <td>
                            @if (r.Actor != null)
                            {
                                @($"{r.Actor.Nombres} {r.Actor.Apellidos}")
                            }
                            else
                            {
                                @:Sistema
                            }
                        </td>
                        <td>@r.Detalle</td>
                        <td>@r.Origen</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<a asp-action="Index" class="btn btn-secondary">Volver a gestión de usuarios</a>

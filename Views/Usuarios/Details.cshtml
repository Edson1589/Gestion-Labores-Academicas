@model GestionLaboresAcademicas.Models.Usuario

@{
    ViewData["Title"] = "Resumen de registro";
}

<h1>Resumen de registro de usuario</h1>

@if (TempData["NotificacionDirector"] != null)
{
    <div class="alert alert-info">
        @TempData["NotificacionDirector"]
    </div>
}

<hr />

<dl class="row">
    <dt class="col-sm-3">Nombre completo</dt>
    <dd class="col-sm-9">@Model.Nombres @Model.Apellidos</dd>

    <dt class="col-sm-3">CI / Documento</dt>
    <dd class="col-sm-9">@Model.CI</dd>

    <dt class="col-sm-3">Correo</dt>
    <dd class="col-sm-9">@Model.Correo</dd>

    <dt class="col-sm-3">Teléfono</dt>
    <dd class="col-sm-9">@Model.Telefono</dd>

    <dt class="col-sm-3">Tipo de usuario</dt>
    <dd class="col-sm-9">@Model.TipoUsuario?.Nombre</dd>

    <dt class="col-sm-3">Estado de cuenta</dt>
    <dd class="col-sm-9">@Model.EstadoCuenta</dd>

    <dt class="col-sm-3">Nombre de usuario</dt>
    <dd class="col-sm-9"><code>@Model.NombreUsuario</code></dd>

    <dt class="col-sm-3">Contraseña temporal</dt>
    <dd class="col-sm-9">
        <code>@Model.PasswordTemporal</code>
        <small class="text-muted d-block">
            Deberá cambiarse en el primer inicio de sesión.
        </small>
    </dd>

    <dt class="col-sm-3">Fecha de registro</dt>
    <dd class="col-sm-9">@Model.FechaRegistro</dd>

    <dt class="col-sm-3">Creado por</dt>
    <dd class="col-sm-9">@Model.CreadoPor</dd>

    <dt class="col-sm-3">Origen de registro</dt>
    <dd class="col-sm-9">@Model.OrigenRegistro</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>

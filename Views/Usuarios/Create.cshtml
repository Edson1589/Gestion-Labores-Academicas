@model GestionLaboresAcademicas.Models.Usuario

@{
    ViewData["Title"] = "Registrar usuario";
}

<h1>Gestión de usuarios &raquo; Registrar usuario</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="Nombres" class="form-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Apellidos" class="form-label"></label>
                <input asp-for="Apellidos" class="form-control" />
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="CI" class="form-label"></label>
                <input asp-for="CI" class="form-control" />
                <span asp-validation-for="CI" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Correo" class="form-label"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoUsuarioId" class="form-label"></label>
                <select asp-for="TipoUsuarioId" class="form-select" asp-items="ViewBag.TipoUsuarioId">
                    <option value="">-- Seleccione un tipo --</option>
                </select>
                <span asp-validation-for="TipoUsuarioId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                Guardar
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
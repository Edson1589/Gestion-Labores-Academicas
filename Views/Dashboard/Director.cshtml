@{
    ViewData["Title"] = "Panel Director";
}

<h2>Panel del Director</h2>
<p>Bienvenido, @User.Identity?.Name</p>

<<div class="row">
    <div class="col-md-4">
        <div class="card border-warning mb-3">
            <div class="card-header bg-warning text-dark">Aprobación de cuentas</div>
            <div class="card-body">
                <p class="card-text">
                    Revisar y aprobar/rechazar cuentas con roles sensibles
                    (Director, Regente, Bibliotecario, etc.).
                </p>
                <a asp-controller="AprobacionRoles" asp-action="Index" class="btn btn-warning">
                    Ver solicitudes pendientes
                </a>
            </div>
        </div>
    </div>
</div>

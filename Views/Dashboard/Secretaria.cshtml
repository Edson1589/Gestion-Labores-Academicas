@{
    ViewData["Title"] = "Panel Secretaria";
}

<h2>Panel de la Secretaria</h2>
<p>Bienvenida, @User.Identity?.Name</p>

<div class="row">
    <div class="col-md-4">
        <div class="card border-info mb-3">
            <div class="card-header bg-info text-white">Gestión de usuarios</div>
            <div class="card-body">
                <p class="card-text">
                    Registrar, editar y cargar usuarios masivamente (HU-01 a HU-12).
                </p>
                <a asp-controller="GestionUsuarios" asp-action="Index" class="btn btn-info">Ir a gestión de usuarios</a>
            </div>
        </div>
    </div>
</div>

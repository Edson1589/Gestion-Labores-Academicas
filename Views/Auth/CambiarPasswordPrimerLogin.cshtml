@model GestionLaboresAcademicas.Models.ViewModels.CambiarPasswordPrimerLoginViewModel

@{
    ViewData["Title"] = "Cambiar contraseña (primer inicio)";
}

<h2>Cambiar contraseña (primer inicio de sesión)</h2>

<div class="alert alert-info mt-3">
    Debes cambiar tu contraseña temporal por una nueva contraseña segura
    antes de poder continuar usando el sistema.
    <br />
    <small>
        Requisitos: mínimo 8 caracteres, al menos una minúscula, una mayúscula,
        un número y un símbolo.
    </small>
</div>

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="CambiarPasswordPrimerLogin" method="post">
            <div class="mb-3">
                <label asp-for="PasswordActual" class="form-label"></label>
                <input asp-for="PasswordActual" class="form-control" />
                <span asp-validation-for="PasswordActual" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NuevaPassword" class="form-label"></label>
                <input asp-for="NuevaPassword" class="form-control" />
                <span asp-validation-for="NuevaPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmarPassword" class="form-label"></label>
                <input asp-for="ConfirmarPassword" class="form-control" />
                <span asp-validation-for="ConfirmarPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Guardar nueva contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

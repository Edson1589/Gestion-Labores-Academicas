@{
    ViewData["Title"] = "Panel de la Secretaria";
}

<h2 class="mb-3">Panel de la Secretaria</h2>
<p class="text-muted">Bienvenida, @User.Identity?.Name</p>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card border-info h-100">
            <div class="card-header bg-info text-white">Gestión de usuarios</div>
            <div class="card-body">
                <p class="card-text">
                    Registrar, editar y cargar usuarios masivamente según las HU-01 a HU-12
                    del módulo de Gestión de usuarios.
                </p>
                <a asp-controller="GestionUsuarios"
                   asp-action="Index"
                   class="btn btn-light">
                    Ir a gestión de usuarios
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-primary h-100">
            <div class="card-header bg-primary text-white">Estadísticas de apoyo</div>
            <div class="card-body">
                <p class="card-text">
                    Consultar estadísticas académicas de apoyo para reportes administrativos
                    (promociones, repitencias, deserción, etc.).
                </p>
                <a asp-controller="Estadisticas"
                   asp-action="Index"
                   class="btn btn-light">
                    Ver estadísticas
                </a>
            </div>
        </div>
    </div>
</div>
